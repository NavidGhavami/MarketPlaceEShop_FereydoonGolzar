@using MarketPlace.Application.Utilities
@model MarketPlace.DataLayer.DTOs.ChatRoom.FilterChatRoomDTO
@{
    ViewData["Title"] = "لیست گفتگو با فروشنده ها";
}


<div class="page-header text-center">
    <div class="container">
        <h3 class="text-danger">@ViewData["Title"]</h3>
    </div><!-- End .container -->
    @if (User.Identity.IsAuthenticated)
    {
        <div class="container">
            <h5 class="page-title">پنل کاربری ، @User.Identity.Name</h5>
        </div><!-- End .container -->
    }
</div>

<nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">صفحه اصلی</a></li>
            <li class="breadcrumb-item" aria-current="page"><a asp-area="User" asp-controller="Home" asp-action="Dashboard">داشبورد</a></li>

            <li class="breadcrumb-item active"><a href="#">@ViewData["Title"]</a></li>

        </ol>
    </div><!-- End .container -->
</nav>

<div class="page-content">
    <div class="dashboard">
        <div class="container">
            <div class="row">
                <aside class="col-md-4 col-lg-3">
                    @await Component.InvokeAsync("UserSidebarDashboard")
                </aside><!-- End .col-lg-3 -->

                <div class="col-md-8 col-lg-9">
                    <div class="tab-content">
                        <form asp-area="User" asp-controller="Ticket" asp-action="GetUserConversation" id="filter-form" method="get">
                            <input type="hidden" asp-for="PageId" />
                        </form>
                        <div class="tab-pane fade active show" id="tab-account" role="tabpanel" aria-labelledby="tab-account-link">
                            @if (Model.ChatRooms != null && Model.ChatRooms.Any())
                            {
                                <h3 class="title mb-3">لیست تیکت ها</h3>

                                <div class="col-md-12">

                                    <table class="table table-striped table-responsive-md table-bordered text-center">
                                        <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">شناسه</th>
                                            <th scope="col">نام فروشگاه</th>
                                            <th scope="col">تاریخ</th>
                                            <th scope="col">عملیات</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var item in Model.ChatRooms)
                                        {
                                            <tr>
                                                <th scope="row">@item.Id</th>
                                                <td>@item.Seller.StoreName</td>
                                                <td>@item.CreateDate.ToShamsiDate()</td>
                                                <td>
                                                    <a style="margin-right: 130px;" asp-area="User" asp-controller="Ticket" asp-action="ConversationDetail" asp-route-conversationId="@item.Id"
                                                       class="btn btn-round btn-outline-secondary btn-sm">نمایش جزییات</a>
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>

                                </div>
                            }
                            else
                            {
                                <partial name="_NoItemFound"/>
                            }
                        </div><!-- .End .tab-pane -->
                        <partial name="_PagingPartial" model="@Model.GetCurrentPaging()" />
                    </div>
                </div><!-- End .col-lg-9 -->
            </div><!-- End .row -->
        </div><!-- End .container -->
    </div><!-- End .dashboard -->
</div>



