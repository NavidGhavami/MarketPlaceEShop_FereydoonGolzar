@using MarketPlace.Application.Utilities
@model MarketPlace.DataLayer.DTOs.Seller.EditSellerRequestDTO
@{
    ViewData["Title"] = "ویرایش درخواست";
}

@section Scripts
    {
    <partial name="_JqueryValidators" />
}

    <div class="page-header text-center">
        <div class="container">
            <h3 class="text-danger">@ViewData["Title"]</h3>
        </div><!-- End .container -->
        @if (User.Identity.IsAuthenticated)
    {
        <div class="container">
            <h5 class="page-title">پنل کاربری ، @User.Identity.Name</h5>
        </div>

        <!-- End .container -->
    }
</div>

<nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">صفحه اصلی</a></li>
            <li class="breadcrumb-item" aria-current="page"><a asp-area="User" asp-controller="Home" asp-action="Dashboard">داشبورد</a></li>

            <li class="breadcrumb-item active"><a href="#">@ViewData["Title"]</a></li>

        </ol>
    </div><!-- End .container -->
</nav>

<div class="page-content">
    <div class="dashboard">
        <div class="container">
            <div class="row">
                <aside class="col-md-4 col-lg-3">
                    @await Component.InvokeAsync("UserSidebarDashboard")
                </aside><!-- End .col-lg-3 -->
                <div class="col-md-8 col-lg-9">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="tab-account" role="tabpanel" aria-labelledby="tab-account-link">
                            <form method="post" asp-area="User" asp-controller="Seller" asp-action="EditSellersRequest" enctype="multipart/form-data">
                                <input type="hidden" asp-for="Id" />
                                <div class="row col-md-12">
                                    <div class="form-group col-md-6">
                                        <label>نام فروشگاه</label>
                                        <input type="text" asp-for="StoreName" placeholder="نام فروشگاه خود را ذکر نمایید" class="form-control">
                                        <span class="text-danger float-right" asp-validation-for="StoreName"></span>
                                    </div>
                                    <br />
                                    <div class="form-group col-md-6">
                                        <label>کد ملّی فروشنده</label>
                                        <input type="text" asp-for="NationalId" placeholder="کد ملّی 10 رقمی خود را وارد نمایید" class="form-control">
                                        <span class="text-danger float-right" asp-validation-for="NationalId"></span>
                                    </div>
                                    <br />
                                </div>
                                <div class="row col-md-12">
                                    <div class="form-group col-md-6">
                                        <label>تلفن ثابت فروشگاه</label>
                                        <input type="text" asp-for="Phone" placeholder="تلفن ثابت فروشگاه را وارد نمایید" class="form-control">
                                        <span class="text-danger float-right" asp-validation-for="Phone"></span>
                                    </div>
                                    <br />
                                    <div class="form-group col-md-6">
                                        <label>تلفن همراه فروشنده / فروشگاه</label>
                                        <input type="text" asp-for="Mobile" placeholder="تلفن همراه فروشنده / فروشگاه را وارد نمایید" class="form-control">
                                    </div>
                                    <br />
                                </div>
                                <br />
                                <div class="row col-md-12">
                                    <div class="form-group col-md-12">
                                        <label>آدرس فروشگاه</label>
                                        <textarea class="form-control" asp-for="Address" placeholder="آدرس دقیق فروشگاه را بنویسید" rows="1"></textarea>
                                        <span class="text-danger float-right" asp-validation-for="Address"></span>
                                    </div>
                                    <br />
                                    <div class="form-group col-md-12">
                                        <label>توضیحات مدیر سایت</label>
                                        <textarea class="form-control text-danger" asp-for="AdminDescription" disabled="" rows="1"></textarea>
                                    </div>
                                </div>
                                <br />
                                <div class="row col-md-12">
                                    <div class="form-group col-md-6">
                                        <label>شماره حساب بانکی</label>
                                        <input type="text" asp-for="BankAccountNumber" placeholder="شماره حساب بانکی خود را وارد نمایید" class="form-control">
                                    </div>
                                    <br />
                                    <div class="form-group col-md-6">
                                        <label>شماره شبا بانکی</label>
                                        <input type="text" asp-for="BankAccountShabaNumber" placeholder="شماره شبا بانکی خود را وارد نمایید (IR10000211122111122)" class="form-control">
                                    </div>
                                    <br />
                                </div>
                                <br />
                                <div class="row col-md-12">
                                    <div class="form-group col-md-12">
                                        <label>شماره کارت بانکی</label>
                                        <input type="text" class="form-control" asp-for="BankAccountCardNumber" placeholder="شماره کارت بانکی 16 رقمی خود را وارد نمایید" />
                                    </div>
                                    <br />
                                </div>
                                <br />
                                <div class="form-group">
                                    <label>توضیحات فروشگاه</label>
                                    <br />
                                    <br />
                                    <textarea class="form-control" asp-for="Description" ckeditor="1"></textarea>
                                    <span class="text-danger float-right" asp-validation-for="Description"></span>
                                </div>
                                <br />
                                <br />


                                <div class="row col-md-12">
                                    <div class="file-upload col-md-9">
                                        <button class="file-upload-btn" type="button" onclick="$('.file-upload-input').trigger( 'click' )">آپلود تصویر کارت ملّی</button>

                                        <div class="image-upload-wrap">
                                            <input class="file-upload-input" name="nationalcard" type='file' onchange="readURL(this);" accept="image/*" />
                                            <div class="drag-text">
                                                <h3>تصویر مورد نظر را به داخل کادر بکشید یا دکمه آپلود تصویر را بزنید</h3>
                                            </div>
                                        </div>
                                        <div class="file-upload-content">
                                            <img class="file-upload-image" src="@(!string.IsNullOrEmpty(Model.NationalCardImage) ? PathExtension.SellerNationalCardImageThumb + Model.NationalCardImage
                                                                                    : PathExtension.DefaultAvatar )" alt="تصویر کارت ملّی" />
                                            <div class="image-title-wrap">
                                                <button type="button" onclick="removeUpload()" class="remove-image">حذف تصویر</button>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="file-upload col-md-3">

                                        <div class="image-upload-wrap" style="width: 165px; height: 125px;">
                                            <div class="drag-text">
                                                <img style="width: 150px; height: 110px;"
                                                     src="@(!string.IsNullOrEmpty(Model.NationalCardImage) ? PathExtension.SellerNationalCardImageThumb + Model.NationalCardImage
                                                              : PathExtension.DefaultAvatar )" alt="تصویر کارت ملّی" />
                                                <br />
                                                <h5>تصویر آپلود شده</h5>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                                <br />
                                <button type="submit" onclick="wait_me()" class="btn btn-round btn-primary btn-block float-right">
                                    <span>ویرایش اطلاعات</span>
                                    <i class="fa fa-edit fa fa-2x"></i>
                                </button>
                                <button onclick="window.history.go(-1)" class="btn btn-round btn-info btn-block float-right">
                                    <span>بازگشت به صفحه قبل</span>
                                    <i class="fa fa-arrow-circle-left fa fa-2x"></i>
                                </button>

                            </form>
                        </div><!-- .End .tab-pane -->
                    </div>
                </div><!-- End .col-lg-9 -->
            </div><!-- End .row -->
        </div><!-- End .container -->
    </div><!-- End .dashboard -->
</div>
