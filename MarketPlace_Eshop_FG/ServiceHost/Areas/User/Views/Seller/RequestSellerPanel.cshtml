@using MarketPlace.Application.Utilities
@model MarketPlace.DataLayer.DTOs.Seller.RequestSellerDTO
@{
    ViewData["Title"] = "درخواست پنل فروشندگی";
}

@section Scripts
{
    <partial name="_JqueryValidators" />
}

<div class="page-header text-center">
    <div class="container">
        <h3 class="text-danger">@ViewData["Title"]</h3>
    </div><!-- End .container -->
    @if (User.Identity.IsAuthenticated)
    {
        <div class="container">
            <h5 class="page-title">پنل کاربری ، @User.Identity.Name</h5>
        </div><!-- End .container -->
    }
</div>

<nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">صفحه اصلی</a></li>
            <li class="breadcrumb-item" aria-current="page"><a asp-area="User" asp-controller="Home" asp-action="Dashboard">داشبورد</a></li>

            <li class="breadcrumb-item active"><a href="#">@ViewData["Title"]</a></li>

        </ol>
    </div><!-- End .container -->
</nav>

<div class="page-content">
    <div class="dashboard">
        <div class="container">
            <div class="row">
                <aside class="col-md-4 col-lg-3">
                    @await Component.InvokeAsync("UserSidebarDashboard")
                </aside><!-- End .col-lg-3 -->
                <div class="col-md-8 col-lg-9">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="tab-account" role="tabpanel" aria-labelledby="tab-account-link">
                            <form method="post" asp-area="User" asp-controller="Seller" asp-action="RequestSellerPanel" enctype="multipart/form-data">

                                <div class="row col-md-12">
                                    <div class="form-group col-md-6">
                                        <label>نام فروشگاه</label>
                                        <input type="text" asp-for="StoreName" class="form-control">
                                        <span class="text-danger float-right" asp-validation-for="StoreName"></span>
                                    </div>
                                    <br />
                                    <div class="form-group col-md-6">
                                        <label>کد ملّی فروشنده</label>
                                        <input type="text" asp-for="NationalId" class="form-control">
                                        <span class="text-danger float-right" asp-validation-for="NationalId"></span>
                                    </div>
                                    <br />
                                </div>
                                <div class="form-group">
                                    <label>تلفن ثابت فروشگاه</label>
                                    <input type="text" asp-for="Phone" class="form-control">
                                    <span class="text-danger float-right" asp-validation-for="Phone"></span>
                                </div>
                                <br />
                                <div class="row col-md-12">
                                    <div class="form-group col-md-12">
                                        <label>آدرس فروشگاه</label>
                                        <textarea class="form-control" asp-for="Address" rows="1"></textarea>
                                        <span class="text-danger float-right" asp-validation-for="Address"></span>
                                    </div>
                                    <br />
                                </div>
                                <div class="form-group">
                                    <label>توضیحات فروشگاه</label>
                                    <br />
                                    <br />
                                    <textarea class="form-control" asp-for="Description" ckeditor="1"></textarea>
                                    <span class="text-danger float-right" asp-validation-for="Description"></span>
                                </div>
                                <br />
                                <br />

                                <div class="row col-md-12">
                                    <div class="form-group">
                                        <label>لوگو فروشگاه</label>
                                        <input type="file" name="logo" class="form-control">
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <label>تصویر کارت ملّی فروشنده</label>
                                        <input type="file" name="nationalcard" class="form-control">
                                        <span class="text-danger float-right" asp-validation-for="NationalCardImage"></span>
                                    </div>
                                </div>
                                <br />
                                <button type="submit" class="btn btn-round btn-success float-right">
                                    <span>ثبت اطلاعات</span>
                                    <i class="icon-long-arrow-left"></i>
                                </button>
                            </form>
                        </div><!-- .End .tab-pane -->
                    </div>
                </div><!-- End .col-lg-9 -->
            </div><!-- End .row -->
        </div><!-- End .container -->
    </div><!-- End .dashboard -->
</div>





