@using MarketPlace.Application.Extensions
@using MarketPlace.Application.Utilities
@using System.Globalization
@model MarketPlace.DataLayer.DTOs.Products.FilterProductDTO
@{
    ViewData["Title"] = "لیست محصولات";
}

<div class="page-header text-center">
    <div class="container">
        <h3 class="text-danger">پنل فروشندگی</h3>
    </div><!-- End .container -->
    @if (User.Identity.IsAuthenticated)
    {
        <div class="container">
            <h5 class="page-title">@User.Identity.Name</h5>
        </div><!-- End .container -->
    }
</div>

<nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">صفحه اصلی</a></li>
            <li class="breadcrumb-item" aria-current="page"><a asp-area="Seller" asp-controller="Product" asp-action="Index">داشبورد</a></li>

            <li class="breadcrumb-item active"><a href="#">@ViewData["Title"]</a></li>

        </ol>
    </div><!-- End .container -->
</nav>

<div class="page-content">
    <div class="dashboard">
        <div class="container">
            <div class="row">
                <aside class="col-md-4 col-lg-3">
                    @await Component.InvokeAsync("SellerSidebarDashboard")
                </aside><!-- End .col-lg-3 -->

                <div class="col-md-8 col-lg-9">
                    <div class="tab-content">

                        <div class="tab-pane fade active show" id="tab-account" role="tabpanel" aria-labelledby="tab-account-link">
                            @if (Model.Products != null && Model.Products.Any())
                            {
                                <h3 class="title mb-3">لیست محصولات</h3>

                                <div class="col-md-12">

                                    <table class="table table-striped table-responsive-md text-center">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th scope="col">شناسه</th>
                                                <th scope="col">تصویر</th>
                                                <th scope="col">عنوان</th>
                                                <th scope="col">قیمت</th>
                                                <th scope="col">وضعیت</th>
                                                <th scope="col">عملیات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Products)
                                            {
                                            <tr>
                                                <td scope="row">@item.Id</td>
                                                <td>
                                                    <img style="width: 50px; height: 50px;"
                                                         src="@(!string.IsNullOrEmpty(item.Image) ? PathExtension.ProductOrigin + item.Image
                                                                      : PathExtension.DefaultAvatar )" alt="@item.Title" />
                                                </td>
                                                <td>@item.Title</td>
                                                <td>@item.Price.ToString("##,###") تومان</td>

                                                @switch (item.ProductAcceptanceState.GetEnumName())
                                                {
                                                    case "درحال بررسی":
                                                        <td class="text-warning">@item.ProductAcceptanceState.GetEnumName()</td>
                                                        break;
                                                    case "تایید شده":
                                                        <td class="text-success">@item.ProductAcceptanceState.GetEnumName()</td>
                                                        break;
                                                    case "رد شده":
                                                        <td class="text-danger">@item.ProductAcceptanceState.GetEnumName()</td>
                                                        break;
                                                }
                                                <td>
                                                    <a asp-area="User" asp-controller="Ticket" asp-action="TicketDetail" asp-route-ticketId="@item.Id"
                                                       class="btn btn-round btn-outline-secondary btn-sm">نمایش جزییات</a>
                                                </td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                            }
                            else
                            {
                                <partial name="_NoItemFound" />
                            }
                        </div><!-- .End .tab-pane -->
                    </div>
                </div><!-- End .col-lg-9 -->
            </div><!-- End .row -->
        </div><!-- End .container -->
    </div><!-- End .dashboard -->
</div>


