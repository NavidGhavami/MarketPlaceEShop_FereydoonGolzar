@model MarketPlace.DataLayer.DTOs.Blog.ArticleCategory.EditArticleCategoryDTO
@{
    ViewData["Title"] = "ویرایش دسته بندی مقاله";
}



@section scripts
{
    <partial name="_AdminJqueryValidators" />
}

<div class="row pt-2 pb-2">
    <div class="col-sm-9">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Administration" asp-controller="Home" asp-action="Index">داشبورد</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">مدیریت دسته بندی مقالات</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">@ViewData["Title"]</a></li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><i class="fa fa-plus"></i> @ViewData["Title"]</div>
            <div class="card-body">

                <form asp-area="Administration" asp-controller="Blog" asp-action="EditArticleCategory" method="post" enctype="multipart/form-data" id="filter-form">
                    <input type="hidden" asp-for="Id"/>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>عنوان دسته مقاله</label>
                            <input class="form-control" asp-for="Name"/>
                            <span class="text-danger float-right" asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>ترتیب نمایش</label>
                            <input type="number" min="1" class="form-control" asp-for="ShowOrder"/>
                            <span class="text-danger float-right" asp-validation-for="ShowOrder"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>توضیحات کوتاه</label>
                            <textarea class="form-control" rows="5" asp-for="ShortDescription"></textarea>
                            <span class="text-danger float-right" asp-validation-for="ShortDescription"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>توضیحات اصلی</label>
                            <textarea class="form-control" rows="5" asp-for="Description"></textarea>
                            <span class="text-danger float-right" asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label>کلمات کلیدی</label>
                            <input class="form-control" asp-for="Keywords"/>
                            <span class="text-danger float-right" asp-validation-for="Keywords"></span>
                        </div>
                        <div class="form-group col-lg-12">
                            <label>توضیحات متا</label>
                            <input class="form-control" asp-for="MetaDescription"/>
                            <span class="text-danger float-right" asp-validation-for="MetaDescription"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label>آدرس کانونیکال</label>
                            <input class="form-control" asp-for="CanonicalAddress"/>
                            <span class="text-danger float-right" asp-validation-for="CanonicalAddress"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label>آپلود تصویر</label>
                            <input type="file" name="articleCategoryImage" class="form-control" accept=".png, .jpeg, .jpg"/>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-warning btn-block">ویرایش دسته مقاله</button>
                </form>
            </div>
        </div>
    </div>
</div>





