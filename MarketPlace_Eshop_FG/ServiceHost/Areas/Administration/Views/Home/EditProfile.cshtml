@model MarketPlace.DataLayer.DTOs.Account.EditUserProfileDTO
@{
    ViewData["Title"] = "ویرایش پروفایل من";
}



@section scripts
{
    <partial name="_AdminJqueryValidators" />

}

<div class="row pt-2 pb-2">
    <div class="col-sm-9">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Administration" asp-controller="Home" asp-action="Index">داشبورد</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">@ViewData["Title"]</a></li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><i class="fa fa-edit"></i> @ViewData["Title"]</div>
            <div class="card-body">

                <form asp-area="Administration" asp-controller="Home" asp-action="EditProfile" method="post" enctype="multipart/form-data" id="filter-form">
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>نام</label>
                            <input class="form-control" asp-for="FirstName" />
                            <span class="text-danger float-right" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>نام خانوادگی</label>
                            <input class="form-control" asp-for="LastName" />
                            <span class="text-danger float-right" asp-validation-for="LastName"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label>آپلود تصویر</label>
                            <input type="file" name="avatarImage" class="form-control" accept=".png, .jpeg, .jpg" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-warning btn-block">ویرایش اطلاعات کاربر </button>
                </form>
            </div>
        </div>
    </div>
</div>





