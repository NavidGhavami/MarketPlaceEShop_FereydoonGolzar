@using MarketPlace.DataLayer.DTOs.Site
@model MarketPlace.DataLayer.DTOs.Account.LoginUserDTO
@{
    ViewData["Title"] = "ورود به حساب کاربری";
}

@section Scripts
{
    <partial name="_JqueryValidators" />
    <partial name="_CaptchaScripts"/>
}

<br />

<div class="form-box">
    <div class="form-tab">
        <div class="text-center nav-link nav nav-pills nav-fill nav-border-anim">
            <span class="nav-link nav  nav-fill nav-border-anim">
                ورود به حساب کاربری
            </span>
        </div>
        <br />
        <div class="tab-content" id="tab-content-5">
            <div class="tab-pane fade show active" id="signin" role="tabpanel"
                 aria-labelledby="signin-tab">
                <form method="post" asp-controller="Account" asp-action="Login">
                    <partial name="_CaptchaInput" model="@(new CaptchaViewModel())"/>
                    <div class="form-group">
                        <label>تلفن همراه *</label>
                        <input asp-for="Mobile" type="text" class="form-control" id="singin-mobile" name="mobile">
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div><!-- End .form-group -->

                    <div class="form-group">
                        <label>رمز عبور *</label>
                        <input asp-for="Password" type="password" class="form-control" id="singin-password" name="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div><!-- End .form-group -->

                    <div class="form-footer">
                        <button type="submit" onclick="wait_me()" class="btn btn-round btn-primary">
                            <i class="bi bi-box-arrow-in-left"></i>
                            <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" fill="currentColor" class="bi bi-box-arrow-in-left" style="padding-left: 3px;" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M10 3.5a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 1 1 0v2A1.5 1.5 0 0 1 9.5 14h-8A1.5 1.5 0 0 1 0 12.5v-9A1.5 1.5 0 0 1 1.5 2h8A1.5 1.5 0 0 1 11 3.5v2a.5.5 0 0 1-1 0v-2z" />
                                <path fill-rule="evenodd" d="M4.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H14.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
                            </svg>
                            <span class="wishlist-txt">ورود</span>
                        </button>

                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input"
                                   id="signin-remember">
                            <label class="custom-control-label" for="signin-remember">
                                مرا به خاطر
                                بسپار !
                            </label>
                        </div><!-- End .custom-checkbox -->

                        <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-link">رمز عبور خود را فراموش کرده ام!</a>
                    </div><!-- End .form-footer -->
                </form>
                <div class="form-choice">
                    <p class="text-center">یا ورود با</p>
                    <div class="row">
                        <div class="col-sm-6">
                            <a href="#" class="btn btn-login btn-g">
                                <i class="icon-google"></i>
                                حساب گوگل
                            </a>
                        </div><!-- End .col-6 -->
                        <div class="col-sm-6">
                            <a href="#" class="btn btn-login btn-f">
                                <i class="icon-facebook-f"></i>
                                حساب فیسبوک
                            </a>
                        </div><!-- End .col-6 -->
                    </div><!-- End .row -->
                </div><!-- End .form-choice -->
            </div><!-- .End .tab-pane -->
        </div><!-- End .tab-content -->
    </div><!-- End .form-tab -->
</div>


