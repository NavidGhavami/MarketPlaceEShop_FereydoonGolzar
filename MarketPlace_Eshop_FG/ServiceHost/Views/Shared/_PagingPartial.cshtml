@model MarketPlace.DataLayer.DTOs.Paging.BasePaging
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        
        @if (Model.StartPage < Model.PageId)
        {
            <li class="page-item">
                <a class="page-link page-link-prev" onclick="FillPageId(@(Model.PageId - 1))" aria-label="Previous" tabindex="-1" aria-disabled="true">
                    <span aria-hidden="true"><i class="icon-long-arrow-right"></i></span>قبلی
                </a>
            </li>
        }

        @for (int i = Model.StartPage; i <= Model.EndPage; i++)
        {
            <li class="page-item @(Model.PageId == i ? "active":"")" aria-current="page">
                <a class="page-link" onclick="FillPageId(@i)">@i</a>
            </li>
        }
        @if (Model.EndPage > Model.PageId)
        {
            <li class="page-item">
                <a class="page-link page-link-next" onclick="FillPageId(@(Model.PageId + 1))" aria-label="Next">
                    <span aria-hidden="true"><i class="icon-long-arrow-left"></i></span>بعدی
                </a>
            </li>
        }

    </ul>
</nav>