@using MarketPlace.Application.EntitiesExtensions
@model List<MarketPlace.DataLayer.Entities.Site.Slider>



@if (Model != null && Model.Any())
{
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    @*<ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>*@
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        @foreach (var item in Model)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@item.GetSliderImageAddress()"alt="First Image">
                <div class="carousel-caption SliderContent d-md-block">
                    
                        <h3 class="intro-subtitle">@item.Header</h3>
                        <h1 class="intro-title">
                            @item.MainText <br>@item.SecondText
                        </h1>

                        <h3 class="text-danger">@item.Footer</h3>

                        <!-- End .intro-title -->
                        <br />
                        <a href="@item.Link" target="_blank" class="btn btn-primary btn-round">
                            <span>اکنون بخرید</span>
                            <i class="icon-long-arrow-left"></i>
                        </a>
                    
                </div>
            </div>
        }

    </div>
    <!-- Controls -->
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
}


