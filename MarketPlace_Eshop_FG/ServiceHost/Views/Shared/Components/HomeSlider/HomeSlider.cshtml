@using MarketPlace.Application.EntitiesExtensions
@model List<MarketPlace.DataLayer.Entities.Site.Slider>


@if (Model != null && Model.Any())
{
    <div class="intro-slider-container">
        <div class="intro-slider owl-carousel owl-simple owl-nav-inside" data-toggle="owl" data-owl-options='{
                        "nav": false,
                        "rtl": true,
                            "responsive": {
                            "992": {
                                "nav": true
                            }
                        }
                    }'>
            @foreach (var item in Model)
            {
                <div class="intro-slide SlideHeight">
                    <div class="container intro-content">
                        <div class="row">
                            <img src="@item.GetSliderImageAddress()" class="SliderIMG" alt="Alternate Text" title="Alternate Text" />
                            <div class="col-auto offset-lg-3 intro-col SliderContent">
                                <h3 class="intro-subtitle">@item.Header</h3><!-- End .h3 intro-subtitle -->
                                <h1 class="intro-title">
                                    @item.MainText <br>@item.SecondText
                                    
                                </h1>
                                
                                    <h3 class="text-danger">@item.Footer</h3>
                                
                                <!-- End .intro-title -->
                                    <br />
                                <a href="@item.Link" target="_blank" class="btn btn-outline-primary-2">
                                    <span>اکنون بخرید</span>
                                    <i class="icon-long-arrow-left"></i>
                                </a>
                            </div><!-- End .col-auto offset-lg-3 -->
                        </div><!-- End .row -->
                    </div><!-- End .container intro-content -->
                </div><!-- End .intro-slide -->

            }

        </div><!-- End .owl-carousel owl-simple -->

        <span class="slider-loader"></span><!-- End .slider-loader -->
    </div><!-- End .intro-slider-container -->
}